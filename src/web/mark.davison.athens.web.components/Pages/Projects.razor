@attribute [Route(Routes.Projects)]

<MudStack>
    <MudStack Row>
         <MudCheckBox T="bool" Label="Show Archived"></MudCheckBox>
         <MudButton 
            Class="ml-auto"
            ButtonType="ButtonType.Submit" 
            Color="Color.Primary" 
            StartIcon="@Icons.Material.Filled.Add" 
            Variant="Variant.Filled" 
            Size="Size.Small" 
            IconSize="Size.Large">NEW PROJECT</MudButton>
    </MudStack>
    <MudGrid Class="mt-4" Justify="Justify.FlexStart">
        @foreach (var project in LoadedProjects)
        {
            <MudItem xs="3" Class="project-card-item">
                @*TODO: SASS MAGIC -> class project-card-paper, basically just groups all the other classes*@
                <MudPaper Class="mud-height-full rounded-lg d-flex flex-column-reverse pa-6">
                    <MudText Class="project-card-name" Typo="Typo.h5">@project.Name</MudText>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</MudStack>